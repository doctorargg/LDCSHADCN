# Lotus Direct Care Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Existing Services (already configured)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@lotusdirectcare.com
NOTIFICATION_EMAIL=info@lotusdirectcare.com
ADMIN_API_KEY=your_admin_api_key

# AI Service APIs (new)
# Get your Claude API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Get your Google AI API key from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=...

# Get your Firecrawl API key from: https://firecrawl.com/
FIRECRAWL_API_KEY=fc-...

# AI Configuration
AI_MODEL_PRIMARY=claude-3-opus-20240229
AI_MODEL_SECONDARY=gpt-4-turbo-preview
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4000

# Email Response Settings
AI_EMAIL_RESPONSE_DELAY_MS=120000  # 2 minutes delay for natural feel
AI_EMAIL_RESPONSE_ENABLED=true

# Blog Automation Settings
AI_BLOG_GENERATION_ENABLED=true
AI_BLOG_SCHEDULE_CRON="0 9 * * 1"  # Every Monday at 9 AM
AI_BLOG_MIN_WORDS=2000
AI_BLOG_MAX_WORDS=2500

# Feature Flags
FEATURE_AI_EMAIL_RESPONDER=true
FEATURE_AI_BLOG_AUTOMATION=true
FEATURE_AI_CRM=true

# Development/Production
NODE_ENV=development