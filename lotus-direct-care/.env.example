# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Email Configuration (Optional - for non-AI email sending)
RESEND_API_KEY=your_resend_api_key

# SendGrid Configuration (Alternative email provider)
SENDGRID_API_KEY=your_sendgrid_api_key # Optional
SENDGRID_FROM_EMAIL=noreply@lotusdirectcare.com # Optional

# Notification Settings
NOTIFICATION_EMAIL=admin@lotusdirectcare.com # Email for admin notifications

# AI Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key # Optional
GOOGLE_AI_API_KEY=your_google_ai_api_key # Optional

# Admin Configuration
ADMIN_API_KEY=your_secure_admin_api_key

# Vercel Cron Configuration
CRON_SECRET=your_secure_cron_secret

# Feature Flags
FEATURE_AI_EMAIL_RESPONSES=true
FEATURE_AI_BLOG_AUTOMATION=true
FEATURE_AI_CRM_INTEGRATION=false

# AI Model Configuration
AI_MODEL_PRIMARY=claude-3-5-sonnet-20241022
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4000

# Email Response Configuration
AI_EMAIL_RESPONSE_DELAY_MS=120000 # 2 minutes

# Blog Generation Configuration
AI_BLOG_GENERATION_ENABLED=true
AI_BLOG_SCHEDULE_CRON="0 9 * * 1" # Every Monday at 9am
AI_BLOG_MIN_WORDS=800
AI_BLOG_MAX_WORDS=1200